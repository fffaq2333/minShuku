/* pages/houses/house.wxss */


.houst_list{
  margin-top: 20rpx;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  position: relative;
}


/*  */
.list_block{
  display: inline-block;
  width:50%;
  height: 400rpx;
  /* margin-left: 20rpx; */
  box-sizing: border-box;
  padding-left: 20rpx;
  margin-top: 20rpx;
  
}

/* 图片样式 */
.list_block .minShuKu_image .image{
  height: 250rpx;
  width: 90%;
  align-items: center;
  border-radius: 5%;
}

/* 配置样式 */
.list_block .setting .setting{
  font-size: 25rpx;
}

/* 标题样式  */
.list_block .title .title{
  font-size: 30rpx;
}

/* 原始价格样式 */
.list_block .price .org{
  text-decoration:line-through;
  color: rgb(189, 188, 188);
  font-size: 25rpx;
}

/* 现价格样式 */
.list_block .price .now{
  font-size: 25rpx;
}

/* 查找房源框体 */
.search_for_it{
  width: 100%;
  height: 100rpx;
  margin-top: 20rpx;
  margin-bottom: 50rpx;
}

/* 查找房源框体字体 */
.search_for_it .city .city{
  display:flex;
  align-items:center;
  justify-content:center;
}


/* 查找房源按钮 */
.search_for_it .btn{
  margin-top: 10rpx;
  color: azure;
  background-color:#ff5b5b;
}

.swiper_size{
  display:flex;                
 justify-content: center;         
}

.swiper_pic{
  width:400rpx;
  height:400rpx;    
}
